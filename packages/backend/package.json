{
    "name": "@veroscale/backend",
    "version": "0.1.0",
    "private": true,
    "description": "VeroScale Backend - Modular Monolith",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "postinstall": "prisma generate",
        "test": "vitest",
        "test:unit": "vitest run",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "seed:peacetime": "ts-node scripts/seed-peacetime.ts",
        "lint": "eslint src --ext .ts",
        "lint:deps": "dependency-cruiser --config .dependency-cruiser.cjs src",
        "db:migrate": "prisma migrate dev",
        "db:migrate:deploy": "prisma migrate deploy",
        "db:seed": "tsx prisma/seed.ts",
        "db:studio": "prisma studio",
        "db:generate": "prisma generate"
    },
    "dependencies": {
        "@prisma/client": "^5.8.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^9.0.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.10.6",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "dependency-cruiser": "^16.0.0",
        "eslint": "^8.56.0",
        "jest": "^30.2.0",
        "prisma": "^5.8.0",
        "ts-jest": "^29.4.6",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^1.1.3"
    }
}